---
interface TransportMode {
  mode: string;
  description: string;
  cost: string;
  color: string;
}

interface Props {
  modes: TransportMode[];
  cityName: string;
  cityImage: string;
}

const { modes, cityName, cityImage } = Astro.props;

const iconBg: Record<string, string> = {
  red: 'bg-red-100',
  yellow: 'bg-yellow-100',
  green: 'bg-green-100',
  blue: 'bg-blue-100',
};

const iconText: Record<string, string> = {
  red: 'text-red-500',
  yellow: 'text-yellow-500',
  green: 'text-green-500',
  blue: 'text-blue-500',
};
---

<section class="py-8 sm:py-12 bg-gray-50">
  <div class="container-wide">
    <p class="text-orange-500 text-xs sm:text-sm font-medium mb-2">Getting Around</p>
    <h2 class="text-xl sm:text-2xl font-bold text-gray-900 guide-section-header">
      Best ways to explore {cityName}
    </h2>
    <p class="text-gray-500 mb-6 sm:mb-8 text-sm sm:text-base">
      {cityName} has excellent transport options. Here's how to get around efficiently.
    </p>

    <div class="grid lg:grid-cols-2 gap-6 lg:gap-8">
      <div class="space-y-3 sm:space-y-4">
        {modes.map((m, i) => (
          <div class="flex gap-3 sm:gap-4 p-3 sm:p-4 bg-white rounded-xl border border-gray-100">
            <div class={`w-10 h-10 sm:w-12 sm:h-12 ${iconBg[m.color] || 'bg-gray-100'} rounded-full flex items-center justify-center flex-shrink-0`}>
              <span class={`text-sm font-bold ${iconText[m.color] || 'text-gray-500'}`}>{i + 1}</span>
            </div>
            <div class="min-w-0">
              <div class="flex items-center gap-2 mb-1">
                <h4 class="font-semibold text-gray-900 text-sm sm:text-base">{m.mode}</h4>
                <span class="text-xs text-orange-500 font-medium">{m.cost}</span>
              </div>
              <p class="text-xs sm:text-sm text-gray-500">{m.description}</p>
            </div>
          </div>
        ))}
      </div>
      <div class="hidden lg:block">
        <img
          src={cityImage}
          alt={`Getting around ${cityName}`}
          class="rounded-2xl w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>
