---
interface BudgetTier {
  tier: string;
  dailyCost: string;
  color: string;
  featured?: boolean;
  items: string[];
}

interface Props {
  tiers: BudgetTier[];
  cityName: string;
}

const { tiers, cityName } = Astro.props;

const badgeColors: Record<string, string> = {
  green: 'bg-green-100 text-green-700',
  orange: 'bg-orange-500 text-white',
  purple: 'bg-purple-100 text-purple-700',
};
---

<section class="py-8 sm:py-12 bg-gray-50">
  <div class="container-wide">
    <p class="text-orange-500 text-xs sm:text-sm font-medium mb-2">Budget</p>
    <h2 class="text-xl sm:text-2xl font-bold text-gray-900 guide-section-header">
      {cityName} Budget Guide
    </h2>

    <div class="scroll-row sm:grid sm:grid-cols-2 lg:grid-cols-3 sm:gap-4 lg:gap-6 sm:overflow-visible sm:pb-0">
      {tiers.map((t) => (
        <div class:list={[
          'bg-white rounded-2xl p-5 sm:p-6 min-w-[260px] sm:min-w-0',
          t.featured ? 'border-2 border-orange-300 shadow-md' : 'border border-gray-100',
        ]}>
          <div class="text-center mb-4">
            <span class={`inline-block px-4 py-1.5 rounded-full text-xs sm:text-sm font-semibold ${badgeColors[t.color] || badgeColors.green}`}>
              {t.tier}
            </span>
          </div>
          <p class="text-xl sm:text-2xl font-bold text-center text-gray-900 mb-4">{t.dailyCost}</p>
          <ul class="text-xs sm:text-sm text-gray-500 space-y-2">
            {t.items.map((item) => (
              <li class="flex items-start gap-2">
                <span class="text-gray-300 mt-0.5">â€¢</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
